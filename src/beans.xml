<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jee="http://www.springframework.org/schema/jee"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/jee
		http://www.springframework.org/schema/jee/spring-jee-3.1.xsd
		http://www.springframework.org/schema/context   
        http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:component-scan base-package="org.sap.era" />
	<context:load-time-weaver
		weaver-class="org.sap.era.service.ExtInstrumentationLoadTimeWeaver"
		aspectj-weaving="autodetect" />
	<!-- Service List -->
	<bean id="personService" class="org.sap.era.service.PersonService" scope="singleton">
		<property name="personDAO" ref="personDAO" />
	</bean>

	<bean id="orgnazitionService" class="org.sap.era.service.OrgnazitionService" scope="singleton">
		<property name="orgnazitionDAO" ref="orgnazitionDAO" />
	</bean>

	<bean id="cellModelService" class="org.sap.era.service.CellModelService" scope="singleton">
		<property name="cellModelDAO" ref="cellModelDAO" />
	</bean>

	<bean id="tableModelService" class="org.sap.era.service.TableModelService" scope="singleton">
		<property name="tableModelDAO" ref="tableModelDAO" />
	</bean>

	<bean id="tableGroupModelService" class="org.sap.era.service.TableGroupModelService" scope="singleton">
		<property name="tableGroupModelDAO" ref="tableGroupModelDAO" />
	</bean>

	<bean id="tableGroupAssignmentService" class="org.sap.era.service.TableGroupAssignmentService" scope="singleton">
		<property name="tableGroupAssignmentDAO" ref="tableGroupAssignmentDAO" />
	</bean>

	<!-- Service List End -->

	<!-- DAO List -->
	<bean id="personDAO" class="org.sap.era.dao.PersonDAO" scope="singleton">
		<property name="entityManagerFactory" ref="entityManagerFactory" />
	</bean>

	<bean id="orgnazitionDAO" class="org.sap.era.dao.OrgnazitionDAO" scope="singleton">
		<property name="entityManagerFactory" ref="entityManagerFactory" />
	</bean>

	<bean id="cellModelDAO" class="org.sap.era.dao.CellModelDAO" scope="singleton">
		<property name="entityManagerFactory" ref="entityManagerFactory" />
	</bean>

	<bean id="tableModelDAO" class="org.sap.era.dao.TableModelDAO" scope="singleton">
		<property name="entityManagerFactory" ref="entityManagerFactory" />
	</bean>

	<bean id="tableGroupModelDAO" class="org.sap.era.dao.TableGroupModelDAO" scope="singleton">
		<property name="entityManagerFactory" ref="entityManagerFactory" />
	</bean>

	<bean id="tableGroupAssignmentDAO" class="org.sap.era.dao.TableGroupAssignmentDAO" scope="singleton">
		<property name="entityManagerFactory" ref="entityManagerFactory" />
	</bean>
	<!-- DAO List End -->

	<!-- EntityManagerFactory Configuration -->
	<bean id="entityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="persistenceUnitName" value="eReportAnalytics" />
		<property name="loadTimeWeaver">
			<bean
				class="org.springframework.instrument.classloading.InstrumentationLoadTimeWeaver" />
		</property>
	</bean>

	<jee:jndi-lookup id="dataSource" jndi-name="jdbc/DefaultDB" />

</beans>